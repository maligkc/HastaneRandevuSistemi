@model List<Entities.DTOs.AppointmentDto>

<div class="row appointment-cards">
    <!-- Aktif Randevular -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Randevularım</h5>
            </div>
            <div class="card-body">
                @{
                    var activeAppointments = Model?.Where(a => a.AppointmentStatus == 1).ToList() ?? new List<Entities.DTOs.AppointmentDto>();
                }
                @if (activeAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Doktor</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in activeAppointments)
                                {
                                    <tr>
                                        <td>@appointment.DoctorName</td>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                        <td>
                                            <span class="badge bg-success">Aktif</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary me-1" onclick="editAppointment(@appointment.AppointmentId)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="deleteAppointment(@appointment.AppointmentId)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aktif randevunuz bulunmuyor</h5>
                        <p class="text-muted">Yeni randevu almak için "Randevu Al" butonunu kullanabilirsiniz.</p>
                        <a href="#" onclick="loadContent('book-appointment')" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Randevu Al
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Geçmiş Randevular -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Silinmiş Randevularım</h5>
            </div>
            <div class="card-body">
                @{
                    var pastAppointments = Model?.Where(a => a.AppointmentStatus == -1).ToList() ?? new List<Entities.DTOs.AppointmentDto>();
                }
                @if (pastAppointments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Doktor</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in pastAppointments)
                                {
                                    <tr>
                                        <td>@appointment.DoctorName</td>
                                        <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                        <td>
                                            <span class="badge bg-danger">Silinmiş</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Silinmiş randevunuz bulunmuyor</h5>
                        <p class="text-muted">Silinen veya tarihi geçmiş randevular burada görünecek.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Randevu Düzenleme Modal -->
<div class="modal" id="editAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="editAppointmentModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAppointmentModalLabel">
                    <i class="fas fa-edit me-2"></i>Randevu Düzenle
                </h5>
                <button type="button" class="btn-close" onclick="closeEditAppointmentModal()" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <form id="editAppointmentForm">
                    <input type="hidden" id="editAppointmentId" />
                    
                    <!-- Doktor Seçimi -->
                    <div class="mb-3">
                        <label for="editDoctorId" class="form-label">
                            <i class="fas fa-user-md me-1"></i>Doktor
                        </label>
                        <select id="editDoctorId" name="editDoctorId" class="form-select" required>
                            <option value="">Doktor Seçiniz</option>
                        </select>
                    </div>
                    
                    <!-- Randevu Tarihi -->
                    <div class="mb-3">
                        <label for="editAppointmentDate" class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i>Randevu Tarihi
                        </label>
                        <input type="date" id="editAppointmentDate" name="editAppointmentDate" class="form-control" required />
                    </div>
                    
                    <!-- Randevu Saati -->
                    <div class="mb-3">
                        <label for="editAppointmentTime" class="form-label">
                            <i class="fas fa-clock me-1"></i>Randevu Saati
                        </label>
                        <select id="editAppointmentTime" name="editAppointmentTime" class="form-select" required>
                            <option value="">Saat Seçiniz</option>
                            <option value="07:00:00">07:00</option>
                            <option value="07:30:00">07:30</option>
                            <option value="08:00:00">08:00</option>
                            <option value="08:30:00">08:30</option>
                            <option value="09:00:00">09:00</option>
                            <option value="09:30:00">09:30</option>
                            <option value="10:00:00">10:00</option>
                            <option value="10:30:00">10:30</option>
                            <option value="11:00:00">11:00</option>
                            <option value="11:30:00">11:30</option>
                            <option value="12:00:00">12:00</option>
                            <option value="12:30:00">12:30</option>
                            <option value="13:00:00">13:00</option>
                            <option value="13:30:00">13:30</option>
                            <option value="14:00:00">14:00</option>
                            <option value="14:30:00">14:30</option>
                            <option value="15:00:00">15:00</option>
                            <option value="15:30:00">15:30</option>
                            <option value="16:00:00">16:00</option>
                            <option value="16:30:00">16:30</option>
                            <option value="17:00:00">17:00</option>
                            <option value="17:30:00">17:30</option>
                            <option value="18:00:00">18:00</option>
                            <option value="18:30:00">18:30</option>
                            <option value="19:00:00">19:00</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeEditAppointmentModal()">
                    <i class="fas fa-times me-1"></i>İptal
                </button>
                <button type="button" class="btn btn-primary" onclick="saveAppointmentChanges()">
                    <i class="fas fa-save me-1"></i>Kaydet
                </button>
            </div>
        </div>
    </div>
</div>