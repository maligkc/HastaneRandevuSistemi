@model Entities.DTOs.PatientRegisterDto
@{
    ViewData["Title"] = "Hasta Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Hasta Kayıt</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientFullName" class="form-label">Ad Soyad</label>
                                    <input asp-for="PatientFullName" id="patientFullName" class="form-control" required />
                                    <span asp-validation-for="PatientFullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientTcNo" class="form-label">TC Kimlik No</label>
                                    <input asp-for="PatientTcNo" class="form-control" maxlength="11" pattern="[0-9]{11}" title="TC Kimlik No 11 haneli sayı olmalıdır" required />
                                    <span asp-validation-for="PatientTcNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientAge" class="form-label">Yaş</label>
                                    <input asp-for="PatientAge" class="form-control" type="number" min="1" max="120" required />
                                    <span asp-validation-for="PatientAge" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientGender" class="form-label">Cinsiyet</label>
                                    <select asp-for="PatientGender" class="form-control" required>
                                        <option value="">Seçiniz</option>
                                        <option value="Erkek">Erkek</option>
                                        <option value="Kadın">Kadın</option>
                                    </select>
                                    <span asp-validation-for="PatientGender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientEmail" class="form-label">Email</label>
                                    <input asp-for="PatientEmail" class="form-control" type="email" required />
                                    <span asp-validation-for="PatientEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PatientPhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="PatientPhoneNumber" id="phoneInput" class="form-control" type="tel" placeholder="0 (5XX) XXX XX XX" required />
                                    <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PatientPassword" class="form-label">Şifre</label>
                            <div class="input-group">
                                <input asp-for="PatientPassword" id="passwordInput" class="form-control" type="password" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="PatientPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Zaten hesabınız var mı? <a asp-action="Login" class="text-decoration-none">Giriş Yap</a></p>
                        <p><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Ana Sayfaya Dön</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // TC Kimlik No sadece sayı girişi
    document.addEventListener('DOMContentLoaded', function() {
        // Ad Soyad otomatik büyük harfe çevir
        const fullNameInput = document.getElementById('patientFullName');
        if (fullNameInput) {
            fullNameInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.toUpperCase();
            });
        }

        const tcInput = document.querySelector('input[name="PatientTcNo"]');
        if (tcInput) {
            tcInput.addEventListener('input', function(e) {
                // Sadece sayıları kabul et
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            });
        }

        // Telefon numarası formatlaması
        const phoneInput = document.getElementById('phoneInput');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, ''); // Sadece sayıları al
                
                // 0 ile başlamalı
                if (value.length > 0 && value[0] !== '0') {
                    value = '0' + value;
                }
                
                // Maksimum 11 karakter
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                
                // Formatla: 0 (5XX) XXX XX XX
                if (value.length >= 1) {
                    if (value.length <= 1) {
                        value = value;
                    } else if (value.length <= 4) {
                        value = value.substring(0, 1) + ' (' + value.substring(1);
                    } else if (value.length <= 7) {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4);
                    } else if (value.length <= 9) {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + ' ' + value.substring(7);
                    } else {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + ' ' + value.substring(7, 9) + ' ' + value.substring(9);
                    }
                }
                
                e.target.value = value;
            });

            // Form gönderilmeden önce telefon numarasını temizle
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const cleanPhone = phoneInput.value.replace(/\D/g, '');
                    phoneInput.value = cleanPhone;
                });
            }
        }

        // Şifre göster/gizle
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');
        const toggleIcon = document.getElementById('toggleIcon');
        
        if (togglePassword && passwordInput && toggleIcon) {
            togglePassword.addEventListener('click', function() {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    toggleIcon.classList.remove('fa-eye');
                    toggleIcon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    toggleIcon.classList.remove('fa-eye-slash');
                    toggleIcon.classList.add('fa-eye');
                }
            });
        }
    });
</script>

