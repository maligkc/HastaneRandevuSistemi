@model List<Entities.DTOs.AppointmentDto>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Randevularım</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any(a => a.AppointmentStatus != -1))
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Hasta</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Durum</th>
                            <th>İletişim</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model.Where(a => a.AppointmentStatus != -1))
                        {
                            <tr>
                                <td>@appointment.PatientName</td>
                                <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                <td>
                                    @if (appointment.AppointmentStatus == 1)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Silinmiş</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        @if (!string.IsNullOrEmpty(appointment.PatientPhoneNumber))
                                        {
                                            <div class="mb-1">
                                                <i class="fas fa-phone text-primary me-1"></i>
                                                <a href="tel:@appointment.PatientPhoneNumber" class="text-decoration-none">
                                                    @appointment.PatientPhoneNumber
                                                </a>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(appointment.PatientEmail))
                                        {
                                            <div>
                                                <i class="fas fa-envelope text-info me-1"></i>
                                                <a href="mailto:@appointment.PatientEmail" class="text-decoration-none">
                                                    @appointment.PatientEmail
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Henüz randevunuz bulunmuyor</h5>
                <p class="text-muted">Hastalar size randevu aldığında burada görünecektir.</p>
            </div>
        }
    </div>
</div>
