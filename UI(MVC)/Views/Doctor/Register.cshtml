@model Entities.DTOs.DoctorRegisterDto
@{
    ViewData["Title"] = "Doktor Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white text-center">
                    <h3>Doktor Kayıt</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Ad Soyad</label>
                                    <div class="row">
                                        <div class="col-4">
                                            <select id="doctorTitle" class="form-select">
                                                <option value="DR.">DR.</option>
                                                <option value="UZM. DR.">UZM. DR.</option>
                                                <option value="DOÇ. DR.">DOÇ. DR.</option>
                                                <option value="PROF. DR.">PROF. DR.</option>
                                                <option value="ORD. PROF. DR.">ORD. PROF. DR.</option>
                                            </select>
                                        </div>
                                        <div class="col-8">
                                            <input type="text" id="doctorFullName" class="form-control" placeholder="Ad Soyad" required />
                                            <input type="hidden" asp-for="DoctorFullName" id="doctorFullNameHidden" />
                                        </div>
                                    </div>
                                    <span asp-validation-for="DoctorFullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorTcNo" class="form-label">TC Kimlik No</label>
                                    <input asp-for="DoctorTcNo" class="form-control" maxlength="11" pattern="[0-9]{11}" title="TC Kimlik No 11 haneli sayı olmalıdır" required />
                                    <span asp-validation-for="DoctorTcNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorSpecialization" class="form-label">Uzmanlık Alanı</label>
                                    <select asp-for="DoctorSpecialization" class="form-select" required>
                                        <option value="" disabled selected>Seçiniz</option>
                                        <option value="Acil Tıp">Acil Tıp</option>
                                        <option value="Aile Hekimliği">Aile Hekimliği</option>
                                        <option value="Algoloji (Ağrı)">Algoloji (Ağrı)</option>
                                        <option value="Anesteziyoloji ve Reanimasyon">Anesteziyoloji ve Reanimasyon</option>
                                        <option value="Beyin ve Sinir Cerrahisi">Beyin ve Sinir Cerrahisi</option>
                                        <option value="Çocuk Cerrahisi">Çocuk Cerrahisi</option>
                                        <option value="Çocuk Endokrinolojisi">Çocuk Endokrinolojisi</option>
                                        <option value="Çocuk Hematolojisi ve Onkolojisi">Çocuk Hematolojisi ve Onkolojisi</option>
                                        <option value="Çocuk İmmünolojisi ve Alerji Hastalıkları">Çocuk İmmünolojisi ve Alerji Hastalıkları</option>
                                        <option value="Çocuk Kardiyolojisi">Çocuk Kardiyolojisi</option>
                                        <option value="Çocuk Nörolojisi">Çocuk Nörolojisi</option>
                                        <option value="Çocuk Sağlığı ve Hastalıkları">Çocuk Sağlığı ve Hastalıkları</option>
                                        <option value="Dermatoloji (Cildiye)">Dermatoloji (Cildiye)</option>
                                        <option value="Enfeksiyon Hastalıkları ve Klinik Mikrobiyoloji">Enfeksiyon Hastalıkları ve Klinik Mikrobiyoloji</option>
                                        <option value="Endokrinoloji ve Metabolizma Hastalıkları">Endokrinoloji ve Metabolizma Hastalıkları</option>
                                        <option value="Fiziksel Tıp ve Rehabilitasyon (FTR)">Fiziksel Tıp ve Rehabilitasyon (FTR)</option>
                                        <option value="Gastroenteroloji">Gastroenteroloji</option>
                                        <option value="Genel Cerrahi">Genel Cerrahi</option>
                                        <option value="Geriatri">Geriatri</option>
                                        <option value="Göz Hastalıkları (Oftalmoloji)">Göz Hastalıkları (Oftalmoloji)</option>
                                        <option value="Göğüs Cerrahisi">Göğüs Cerrahisi</option>
                                        <option value="Göğüs Hastalıkları (Pulmonoloji)">Göğüs Hastalıkları (Pulmonoloji)</option>
                                        <option value="Hematoloji">Hematoloji</option>
                                        <option value="İç Hastalıkları (Dahiliye)">İç Hastalıkları (Dahiliye)</option>
                                        <option value="İmmünoloji ve Alerji Hastalıkları (Erişkin)">İmmünoloji ve Alerji Hastalıkları (Erişkin)</option>
                                        <option value="Kadın Hastalıkları ve Doğum">Kadın Hastalıkları ve Doğum</option>
                                        <option value="Kalp ve Damar Cerrahisi">Kalp ve Damar Cerrahisi</option>
                                        <option value="Kardiyoloji">Kardiyoloji</option>
                                        <option value="Kulak Burun Boğaz Hastalıkları (KBB)">Kulak Burun Boğaz Hastalıkları (KBB)</option>
                                        <option value="Nefroloji">Nefroloji</option>
                                        <option value="Neonatoloji (Yenidoğan)">Neonatoloji (Yenidoğan)</option>
                                        <option value="Nöroloji">Nöroloji</option>
                                        <option value="Nükleer Tıp">Nükleer Tıp</option>
                                        <option value="Ortopedi ve Travmatoloji">Ortopedi ve Travmatoloji</option>
                                        <option value="Perinatoloji (Riskli Gebelikler)">Perinatoloji (Riskli Gebelikler)</option>
                                        <option value="Plastik, Rekonstrüktif ve Estetik Cerrahi">Plastik, Rekonstrüktif ve Estetik Cerrahi</option>
                                        <option value="Psikiyatri">Psikiyatri</option>
                                        <option value="Radyasyon Onkolojisi">Radyasyon Onkolojisi</option>
                                        <option value="Radyoloji">Radyoloji</option>
                                        <option value="Romatoloji">Romatoloji</option>
                                        <option value="Spor Hekimliği">Spor Hekimliği</option>
                                        <option value="Tıbbi Genetik">Tıbbi Genetik</option>
                                        <option value="Tıbbi Onkoloji">Tıbbi Onkoloji</option>
                                        <option value="Tıbbi Patoloji">Tıbbi Patoloji</option>
                                        <option value="Üroloji">Üroloji</option>
                                        <option value="Yoğun Bakım">Yoğun Bakım</option>
                                    </select>
                                    <span asp-validation-for="DoctorSpecialization" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorPhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="DoctorPhoneNumber" id="doctorPhoneInput" class="form-control" type="tel" placeholder="0 (5XX) XXX XX XX" required />
                                    <span asp-validation-for="DoctorPhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorEmail" class="form-label">Email</label>
                                    <input asp-for="DoctorEmail" class="form-control" type="email" required />
                                    <span asp-validation-for="DoctorEmail" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorPassword" class="form-label">Şifre</label>
                                    <div class="input-group">
                                        <input asp-for="DoctorPassword" id="doctorPasswordInput" class="form-control" type="password" required />
                                        <button class="btn btn-outline-secondary" type="button" id="toggleDoctorPassword">
                                            <i class="fas fa-eye" id="toggleDoctorIcon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="DoctorPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Kayıt Ol</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Zaten hesabınız var mı? <a asp-action="Login" class="text-decoration-none">Giriş Yap</a></p>
                        <p><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Ana Sayfaya Dön</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // TC Kimlik No sadece sayı girişi
    document.addEventListener('DOMContentLoaded', function() {
        // Ad Soyad otomatik büyük harfe çevir ve unvan ile birleştir
        const fullNameInput = document.getElementById('doctorFullName');
        const titleSelect = document.getElementById('doctorTitle');
        const hiddenFullName = document.getElementById('doctorFullNameHidden');
        
        function updateFullName() {
            const title = titleSelect.value;
            const name = fullNameInput.value.toUpperCase();
            const fullName = title + ' ' + name;
            hiddenFullName.value = fullName;
        }
        
        if (fullNameInput && titleSelect && hiddenFullName) {
            fullNameInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.toUpperCase();
                updateFullName();
            });
            
            titleSelect.addEventListener('change', function() {
                updateFullName();
            });
        }

        const tcInput = document.querySelector('input[name="DoctorTcNo"]');
        if (tcInput) {
            tcInput.addEventListener('input', function(e) {
                // Sadece sayıları kabul et
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
            });
        }

        // Telefon numarası formatlaması
        const phoneInput = document.getElementById('doctorPhoneInput');
        if (phoneInput) {
            phoneInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, ''); // Sadece sayıları al
                
                // 0 ile başlamalı
                if (value.length > 0 && value[0] !== '0') {
                    value = '0' + value;
                }
                
                // Maksimum 11 karakter
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                
                // Formatla: 0 (5XX) XXX XX XX
                if (value.length >= 1) {
                    if (value.length <= 1) {
                        value = value;
                    } else if (value.length <= 4) {
                        value = value.substring(0, 1) + ' (' + value.substring(1);
                    } else if (value.length <= 7) {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4);
                    } else if (value.length <= 9) {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + ' ' + value.substring(7);
                    } else {
                        value = value.substring(0, 1) + ' (' + value.substring(1, 4) + ') ' + value.substring(4, 7) + ' ' + value.substring(7, 9) + ' ' + value.substring(9);
                    }
                }
                
                e.target.value = value;
            });

            // Form gönderilmeden önce telefon numarasını temizle
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const cleanPhone = phoneInput.value.replace(/\D/g, '');
                    phoneInput.value = cleanPhone;
                });
            }
        }

        // Şifre göster/gizle
        const togglePassword = document.getElementById('toggleDoctorPassword');
        const passwordInput = document.getElementById('doctorPasswordInput');
        const toggleIcon = document.getElementById('toggleDoctorIcon');
        
        if (togglePassword && passwordInput && toggleIcon) {
            togglePassword.addEventListener('click', function() {
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    toggleIcon.classList.remove('fa-eye');
                    toggleIcon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    toggleIcon.classList.remove('fa-eye-slash');
                    toggleIcon.classList.add('fa-eye');
                }
            });
        }
    });
</script>

